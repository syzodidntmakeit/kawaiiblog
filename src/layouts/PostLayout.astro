---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import SeriesNav from "../components/SeriesNav.astro";
import ShareButtons from "../components/ShareButtons.astro";
import TableOfContents from "../components/TableOfContents.astro";
import RelatedPosts from "../components/RelatedPosts.astro";
// import CodeCopyButton from '../components/CodeCopyButton.astro';

interface Props {
  post: CollectionEntry<"posts">;
  allPosts: CollectionEntry<"posts">[];
}

const { post, allPosts } = Astro.props;
const { title, excerpt, date, category } = post.data;
let headings: { depth: number; slug: string; text: string }[] = [];
try {
  const rendered = await post.render();
  headings = rendered?.headings ?? [];
} catch (e) {
  console.error("Failed to render post headings:", e);
  headings = [];
}

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Calculate reading time
const wordsPerMinute = 225;
const bodyText = (post.body ?? "") + "";
const wordCount = bodyText.trim() ? bodyText.trim().split(/\s+/).length : 0;
const readingTime =
  wordCount > 0 ? Math.max(1, Math.ceil(wordCount / wordsPerMinute)) : 1;

// Get full URL for sharing
const postUrl = `${Astro.site}posts/${post.slug}/`;
---

<BaseLayout title={title} description={excerpt}>
  <SeriesNav currentPost={post} allPosts={allPosts} />

  <article class="post-container">
    <header class="post-header">
      <div class="meta">
        <span class="category">{category}</span>
        <span class="sep">•</span>
        <time datetime={date.toISOString()}>{formattedDate}</time>
        <span class="sep">•</span>
        <span class="read-time">{readingTime} min read</span>
      </div>

      <h1 class="post-title">{title}</h1>
    </header>

    <div class="content-wrapper">
      <div class="content">
        <slot />

        <ShareButtons title={title} url={postUrl} />
      </div>

      <aside class="sidebar">
        <TableOfContents headings={headings} />
      </aside>
    </div>
  </article>

  <RelatedPosts currentPost={post} allPosts={allPosts} />

  {/* <CodeCopyButton /> */}
</BaseLayout>
