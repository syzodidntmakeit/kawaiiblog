---
import Navigation from "../components/Navigation.astro";
import BackToTop from "../components/BackToTop.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "A lightweight blog about tech, music, and commentary.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0d011f" />
    <meta name="author" content="KawaiiBlog" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta
      property="og:image"
      content={new URL("og-image.png", Astro.site || Astro.url.origin).href}
    />

    <!-- SEO & Webmentions -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={new URL("og-image.png", Astro.site || Astro.url.origin).href}
    />

    <!-- RSS Feed -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="KawaiiBlog RSS Feed"
      href="/rss.xml"
    />
    <link rel="canonical" href={Astro.url} />

    <!-- Fonts -->
    <!-- Self-hosted via @fontsource in global.css -->

    <title>{title} | KawaiiBlog</title>

    <script is:inline>
      // Blocking script to avoid theme flicker
      (function () {
        const storedTheme = localStorage.getItem("theme");
        const systemTheme = window.matchMedia("(prefers-color-scheme: dark)")
          .matches
          ? "dark"
          : "light";
        const theme = storedTheme || systemTheme;
        document.documentElement.setAttribute("data-theme", theme);
      })();
    </script>

    <style is:inline>
      /* Critical CSS */
      body {
        /* Use CSS variables defined in global.css */
        background-color: var(--bg);
        color: var(--text);
        font-family: "Nunito", sans-serif;
      }
      .nav-header {
        position: sticky;
        top: 0;
        z-index: 50;
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 192, 203, 0.25);
        padding: 1rem 0;
      }
    </style>
  </head>
  <body>
    <!-- Accessibility Skip Link -->
    <a href="#main-content" class="skip-link">Skip to content</a>
    <Navigation />
    <main id="main-content" class="container main-content">
      <slot />
    </main>

    <BackToTop />
    <footer class="footer">
      <p>&copy; {new Date().getFullYear()} KawaiiBlog. All wrongs reserved.</p>
      <div class="license-info">
        <p>
          Content licensed under
          <a
            href="https://creativecommons.org/licenses/by-nc/4.0/"
            target="_blank"
            rel="noopener noreferrer"
            title="Creative Commons Attribution-NonCommercial 4.0"
          >
            CC BY-NC 4.0
          </a>
          Â· Code licensed under
          <a
            href="https://github.com/syzodidntmakeit/kawaiiblog2.0/blob/main/LICENSE"
            target="_blank"
            rel="noopener noreferrer"
            title="MIT License"
          >
            MIT
          </a>
        </p>
        <p class="repo-link">
          <a
            href="https://github.com/syzodidntmakeit/kawaiiblog2.0"
            target="_blank"
            rel="noopener noreferrer"
          >
            Configured on GitHub
          </a>
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  .main-content {
    flex: 1; /* Pushes footer down */
    width: 100%;
  }

  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--pink);
    color: var(--bg);
    padding: 8px;
    z-index: 100;
    transition: top 0.2s;
    font-weight: bold;
  }

  .skip-link:focus {
    top: 0;
  }

  .footer {
    margin-top: var(--spacing-xl);
    padding: var(--spacing-lg) 0;
    text-align: center;
    color: var(--muted);
    font-size: 0.9rem;
    border-top: 1px solid rgba(255, 192, 203, 0.1);
  }

  .license-info {
    margin-top: 0.5rem;
    font-size: 0.85rem;
    opacity: 0.8;
  }

  .license-info a {
    color: var(--pink);
    text-decoration: none;
    transition: all 0.2s ease;
    border-bottom: 1px solid transparent;
  }

  .license-info a:hover {
    color: var(--k-5);
    border-bottom-color: var(--k-5);
  }
</style>
