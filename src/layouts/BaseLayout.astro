---
import Navigation from "../components/Navigation.astro";
import BackToTop from "../components/BackToTop.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "A lightweight blog about tech, music, and commentary.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0d011f" />
    <meta name="author" content="KawaiiBlog" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={`${Astro.site}og-image.png`} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${Astro.site}og-image.png`} />

    <!-- RSS Feed -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="KawaiiBlog RSS Feed"
      href="/rss.xml"
    />
    <link rel="canonical" href={Astro.url} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700;900&family=VT323&display=swap"
      rel="stylesheet"
    />

    <title>{title} | KawaiiBlog</title>

    <style is:inline>
      /* Critical CSS */
      body {
        background-color: #0d011f;
        color: #e5e7eb;
        font-family: "Nunito", sans-serif;
      }
      .nav-header {
        position: sticky;
        top: 0;
        z-index: 50;
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 192, 203, 0.25);
        padding: 1rem 0;
      }
    </style>
  </head>
  <body>
    <Navigation />
    <main class="container main-content">
      <slot />
    </main>

    <BackToTop />

    <footer class="container footer">
      <p>&copy; {new Date().getFullYear()} KawaiiBlog. All wrongs reserved.</p>
    </footer>
  </body>
</html>

<style>
  .main-content {
    flex: 1; /* Pushes footer down */
    width: 100%;
  }

  .footer {
    margin-top: var(--spacing-xl);
    padding: var(--spacing-lg) 0;
    text-align: center;
    color: var(--muted);
    font-size: 0.9rem;
    border-top: 1px solid rgba(255, 192, 203, 0.1);
  }
</style>
