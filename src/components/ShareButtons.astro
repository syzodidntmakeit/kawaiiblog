---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
---

<div class="share-buttons" data-title={title} data-url={url}>
  <button id="share-button" class="share-btn" aria-label="Share this post">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="18" cy="5" r="3"></circle>
      <circle cx="6" cy="12" r="3"></circle>
      <circle cx="18" cy="19" r="3"></circle>
      <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
      <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
    </svg>
    <span>Share</span>
  </button>
  
  <button id="copy-link" class="share-btn" aria-label="Copy link">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
      <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
    </svg>
    <span>Copy Link</span>
  </button>
</div>

<div id="toast" class="toast hidden">Link copied! ðŸ“‹</div>

<script>
  const wrapper = document.querySelector('.share-buttons');
  const __title = wrapper?.dataset?.title || '';
  const __url = wrapper?.dataset?.url || '';
  const shareBtn = document.getElementById('share-button');
  const copyBtn = document.getElementById('copy-link');
  const toast = document.getElementById('toast');
  
  // Web Share API
  if (shareBtn) {
    if (navigator.share) {
      shareBtn.addEventListener('click', async () => {
        try {
          await navigator.share({
            title: __title,
            url: __url
          });
        } catch (err) {
          if (err.name !== 'AbortError') {
            console.error('Share failed:', err);
          }
        }
      });
    } else {
      // Hide share button if not supported
      shareBtn.style.display = 'none';
    }
  }
  
  // Copy link
  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(__url);
        showToast();
      } catch (err) {
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = __url;
        document.body.appendChild(textArea);
        textArea.select();
        try {
          document.execCommand('copy');
          showToast();
        } catch (e) {
          console.error('Copy failed:', e);
        }
        document.body.removeChild(textArea);
      }
    });
  }
  
  function showToast() {
    if (toast) {
      toast.classList.remove('hidden');
      setTimeout(() => {
        toast.classList.add('hidden');
      }, 2000);
    }
  }
</script>

<style>
  .share-buttons {
    display: flex;
    gap: 0.75rem;
    margin: var(--spacing-lg) 0;
  }
  
  .share-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: transparent;
    border: 1px solid var(--pink);
    border-radius: var(--radius-sm);
    color: var(--pink);
    font-family: var(--font-primary);
    font-weight: 700;
    font-size: 0.95rem;
    cursor: pointer;
    transition: var(--transition);
  }
  
  .share-btn:hover {
    background: var(--pink);
    color: var(--bg);
    transform: translateY(-2px);
  }
  
  .share-btn svg {
    flex-shrink: 0;
  }
  
  .toast {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    background: var(--pink);
    color: var(--bg);
    padding: 1rem 1.5rem;
    border-radius: var(--radius-md);
    font-weight: 700;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    z-index: 1000;
    animation: slideIn 0.3s ease-out;
  }
  
  .toast.hidden {
    display: none;
  }
  
  @keyframes slideIn {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
</style>
